{
  "name": "@zce/create-nm",
  "version": "1.0.0-alpha.2",
  "description": "A scaffolding tools for creating node modules.",
  "keywords": [
    "module",
    "node",
    "scaffolding",
    "scaffold",
    "caz",
    "zce"
  ],
  "repository": "zce/create-nm",
  "license": "MIT",
  "author": "zce <w@zce.me> (https://zce.me)",
  "main": "index.js",
  "bin": "cli.js",
  "files": [
    "template"
  ],
  "scripts": {
    "test": "standard --fix && jest"
  },
  "jest": {
    "testTimeout": 20000,
    "modulePathIgnorePatterns": [
      "<rootDir>/template"
    ]
  },
  "renovate": {
    "extends": [
      "zce"
    ],
    "ignorePaths": [
      "template"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "template"
    ]
  },
  "dependencies": {
    "caz": "^1.0.0",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "jest": "27.5.1",
    "standard": "17.1.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  }
}
